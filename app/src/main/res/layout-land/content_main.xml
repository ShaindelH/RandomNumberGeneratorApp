<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <include layout="@layout/main_include_instruction_bar" />

    <TextView
        style="@style/multi_text_view_style"
        android:text="@string/from_text_view" />

    <EditText
        android:id="@+id/from_number"
        android:inputType="number"
        style="@style/main_edit_text_style"
        android:hint="@string/from_helper_text" />

    <TextView
        style="@style/multi_text_view_style"
        android:text="@string/to_text_view"
       />

    <EditText
        android:id="@+id/to_number"
        android:inputType="number"
        style="@style/main_edit_text_style"
        android:hint="@string/to_helper_text" />

    <TextView
        android:id="@+id/random_number_text_view"
        style="@style/multi_text_view_style"
        />

</LinearLayout>